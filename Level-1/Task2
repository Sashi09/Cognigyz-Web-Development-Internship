<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gradient Color Change Button</title>
    <style>
        
        body {
            display: flex;
            justify-content: center; 
            align-items: center; 
            height: 100vh; 
            margin: 0;
            background-color: #f0f0f0;
        }

        #colorButton {

            background-image: linear-gradient(to right, #3F5EFB 0%, #FC466B 100%); 
            color: White;
            padding: 10px 25px; 
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 18px;
            font-weight: bold;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2); 
            
           
            transition: all 0.5s ease; 
        }

        #colorButton:hover {
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.3); 
            transform: translateY(-2px); 
        }

        #colorButton:active {
            transform: scale(0.98); 
        }
    </style>
</head>
<body>
    
    <button id="colorButton">
        Click to Change Gradient
    </button>

    <script>
        const gradients = [
            'linear-gradient(to right, #3F5EFB 0%, #FC466B 100%)', 
            'linear-gradient(to right, #833AB4 0%, #FD1D1D 50%, #FCB045 100%)', 
            'linear-gradient(to right, #00C9FF 0%, #92FE9D 100%)', 
            'linear-gradient(to right, #E0E 0%, #30E 100%)' 
        ];
        
        let gradientIndex = 0;
        
     
        const button = document.getElementById('colorButton');


        function changeGradient() {
            
            button.style.backgroundImage = gradients[gradientIndex];
            
            
            gradientIndex++;

            if (gradientIndex >= gradients.length) {
                gradientIndex = 0;
            }
        }

       
        button.addEventListener('click', changeGradient);
    </script>
</body>
</html>
